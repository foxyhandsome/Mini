<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home"
    android:background="@drawable/background_intro3">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/fcthai"
            android:minHeight="48dp"
            android:text="GIFT FOR YOU"
            android:textColor="#FFFFFF"
            android:shadowColor="#FF8BED"
            android:shadowDx="0.0"
            android:shadowDy="0.0"
            android:shadowRadius="50"
            android:textStyle="bold"
            android:textSize="40dp" />

        <Button
            android:id="@+id/btncategory"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_btn_intro"
            android:backgroundTint="#BB8FCE"
            android:fontFamily="@font/fcthai"
            android:text="เลือกหมวดหมู่ที่ต้องการ"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnback"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:background="@android:drawable/alert_light_frame"
            android:backgroundTint="#FF0000"
            android:fontFamily="@font/fcthai"
            android:text="กลับไปหน้าแรก"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/fcthai"
            android:minHeight="48dp"
            android:text="ร้านค้าแนะนำ"
            android:textColor="#FFFFFF"
            android:shadowColor="#FF8BED"
            android:shadowDx="0.0"
            android:shadowDy="0.0"
            android:shadowRadius="50"
            android:textStyle="bold"
            android:textSize="40dp" />

        <ImageView
            android:id="@+id/im11"
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:src="@drawable/im11" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/fcthai"
            android:minHeight="48dp"
            android:text="ร้าน STgiftShop"
            android:textColor="#343434"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnstoredetail1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="0dp"
            android:background="@android:drawable/alert_dark_frame"
            android:backgroundTint="@android:color/holo_blue_bright"
            android:fontFamily="@font/fcthai"
            android:text="รายละเอียดร้านค้า"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/im12"
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:src="@drawable/im12" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/fcthai"
            android:minHeight="48dp"
            android:text="ร้าน GIB SHOP"
            android:textColor="#343434"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnstoredetail2"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="0dp"
            android:background="@android:drawable/alert_light_frame"
            android:backgroundTint="@android:color/holo_blue_bright"
            android:fontFamily="@font/fcthai"
            android:text="รายละเอียดร้านค้า"
            android:textStyle="bold" />

    </LinearLayout>

</ScrollView>